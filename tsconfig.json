{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "src",
    "lib": [ "dom", "es2015", "es2016", "es2017" ],
    "paths": {
      "app/*": ["./*"]
    }
  },
  "include": [
    "./src/**/*",
    "./types/*"
  ]
}